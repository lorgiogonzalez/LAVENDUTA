@using Microsoft.AspNet.Identity

@if (Request.IsAuthenticated)
{
    <div class="header-icons">
        @using (Html.BeginForm("LogOff", "Account", FormMethod.Post, new { id = "logoutForm", @class = "header-wrapicon1" }))
        {
            @Html.AntiForgeryToken()
            <div class="header-wrapicon1">

                @Html.ActionLink("Hello " + User.Identity.GetUserName() + "!", "Index", "Manage", routeValues: null, htmlAttributes: new { title = "Manage" })
                <a href="javascript:document.getElementById('logoutForm').submit()">Log off</a>
            </div>

        }

        @if (User.IsInRole("Comprador"))
        {
            <div class="header-wrapicon2">
                <a href="@Url.Action("Index","Carritos",routeValues: null)">
                    <img src="~/images/icons/icon-header-02.png" class="header-icon1 js-show-header-dropdown" alt="ICON">
                </a>
            </div>
        }
    </div>
}
else
{
    <div class="header-icons">
        <a href=@Url.Action("Login", "Account", routeValues: null) class="header-wrapicon1 dis-block">
            <img src="~/images/icons/icon-header-01.png" class="header-icon1" alt="ICON">
        </a>
    </div>

}
