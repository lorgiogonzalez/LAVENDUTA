@model LA_VENDUTA.Models.Producto_Vendido

@{
    ViewBag.Title = "Create";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@using (Html.BeginForm("Create","Producto_Vendido",new { carritoId= ViewBag.CarritoId,Total=ViewBag.Total},FormMethod.Post))
{
    @Html.AntiForgeryToken()


    @Html.ValidationSummary(true, "", new { @class = "text-danger" })


    <div class="bo9 w-size18 p-l-40 p-r-40 p-t-30 p-b-38 m-t-30 m-r-0 m-l-auto p-lr-15-sm">
        <h5 class="m-text20 p-b-24">
            Cart Totals
        </h5>

        <!--  -->
        <div class="flex-w flex-sb-m p-b-12">
            <span class="s-text18 w-size19 w-full-sm">
                Total:
            </span>

            <span class="m-text21 w-size20 w-full-sm">
                @ViewBag.Total
            </span>
        </div>

        <!--  -->
        <div class="flex-w flex-sb bo10 p-t-15 p-b-20">
            <span class="s-text18 w-size19 w-full-sm">
                Tarjeta:
            </span>

            <div class="w-size20 w-full-sm">
                <p class="s-text8 p-b-23">
                    Por favor seleccione siempre la tarjeta con la que va a realizar el pago, si la casilla se encuentra en blanco sera seleccionada la tarjeta con la que se inscribio.
                </p>

                <div class="form-group">
                    @Html.LabelFor(model => model.NumDesuTarjeta, htmlAttributes: new { @class = "control-label col-md-2" })
                    <div class="col-md-10">
                        @Html.DropDownList("TarjetaDeCreditoId",null, htmlAttributes: new { @class = "form-control" })
                    </div>
                </div>

            </div>
        </div>

        <!--  -->
        <div class="size15 trans-0-4">
            <!-- Button -->
            <button type="submit" class="flex-c-m sizefull bg1 bo-rad-23 hov1 s-text1 trans-0-4">
                Proceed to Checkout
            </button>
        </div>
    </div>



}



@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}

